{
    "name": "slaveofgod/laravel-translator",
    "description": "PHP Laravel artisan command that extracting translation contents and updating translation files automatically",
    "type": "library",
    "keywords": [
        "laravel-translator",
        "laravel",
        "translator",
        "translation",
        "localization",
	"command"
    ],
    "homepage": "https://github.com/slaveofgod/laravel-translator",
    "license": "MIT",
    "authors": [
        {
            "name": "Slave of God",
            "email": "iamtheslaveofgod@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": ">=5.4.x-dev",
        "symfony/finder": ">=4.3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "AB\\Laravel\\Translator\\": "src/"
        },
        "files": [
            "src/Helpers/CommonHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AB\\Laravel\\Translator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AB\\Laravel\\Translator\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan vendor:publish --tag=translator --force"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=translator --force"
        ],
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=translator --force"
        ]
    }
}
